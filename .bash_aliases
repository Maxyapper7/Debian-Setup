### Aliases ###
# APT
alias updt='sudo apt update; sudo apt upgrade'
alias aptdt='sudo apt update'
alias aptgr='sudo apt upgrade'
alias aptin='sudo apt install'
alias aptrm='sudo apt remove'
alias aptpr='sudo apt purge'
alias aptar='sudo apt autoremove'

# CD
alias .1='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# Random
alias vim='nvim'
alias ls='ls -lah --color=auto'
alias mkdir='mkdir -pv'
alias df='df -h'
